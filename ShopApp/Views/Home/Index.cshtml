@model IEnumerable<ShopApp.Models.Offer>
<div style="height: 30px;">
    <div style="width:100%;   padding-bottom:40px;">
        <select name="cars" id="cars" value="Kategorie">
            @for (int i = 0; i < Model.CategoryList.Count; i++)
            {
                <option value="@(i+1)">@Model.CategoryList[i].CategoryName</option>
            }
        </select>
    </div>
</div>


@* PARTIAL VIEW DLA OFERT*@
<div class="d-flex justify-content-center flex-wrap">
    @foreach (var item in Model.OfferList)
    {
        <div class="offer-box">
            <img class="img-fluid rounded" style="height:50%;" src="~/Images/product.jpg" />
            <h2>@item.Title</h2>
            <p>@item.Description</p>
        </div>
    }
</div>


