@model IEnumerable<ShopApp.Models.Offer>
<div style="height: 30px;">
    <div style="width:100%;   padding-bottom:40px;">
        <select name="cars" id="cars" value="Kategorie">
            @for (int i = 0; i < Model.CategoryList.Count; i++)
            {
                <option value="@(i+1)">@Model.CategoryList[i].CategoryName</option>
            }
        </select>
    </div>
</div>


@* PARTIAL VIEW DLA OFERT*@
<div class="d-flex justify-content-center flex-wrap">
    @{
        List<ShopApp.Models.Offer> offers = Model.OfferList.ToList();

        for (int i = 0; i < offers.Count; i++)
        {
            ShopApp.Models.Offer show = offers[i];
            string pictureUrl = string.Empty;
            if (show.OfferPictures != null && show.OfferPictures.Count > 0)
            {
                System.Diagnostics.Debug.WriteLine("Oferta nr: " + (i+1) + "\tZdjęć: " + show.OfferPictures.Count);
                pictureUrl = show.OfferPictures.ToList()[0].PathToFile;
            }
            else
            {
                pictureUrl = @"..\..\App_Files\Images\OfferPictures\DefaultOfferPicture.jpg";
            }

            System.Diagnostics.Debug.WriteLine(pictureUrl);

            <div class="offer-box">
                <img class="img-fluid rounded" style="height:50%;" src="@pictureUrl" />
                <h2>@show.Title</h2>
                <p>@show.Description</p>
            </div>
        }

    }


