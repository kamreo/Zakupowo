@model ShopApp.ViewModels.User.AccountViewModel
@{
    ViewBag.Title = "";
}

<script src="https://kit.fontawesome.com/b99e675b6e.js"></script>

<div class="wrapper">
    <div class="sidebar">
        <div class="bg_shadow"></div>
        <div class="sidebar__inner">
            <div class="close">
                <i class="fas fa-times"></i>
            </div>

            <ul class="siderbar_menu">
                <li>
                    <a href="@Url.Action("Account", "User")"class="active">
                        <div class="icon"><i class="fa fa-user"></i></div>
                        <div class="title">Profil</div>

                    </a>
                </li>
                <li>
                    <a href="@Url.Action("AccountAddProduct", "User")">
                        <div class="icon"><i class="fa fa-plus"></i></div>
                        <div class="title">Dodaj produkt</div>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("AccountOrderHistory", "User")" >
                        <div class="icon"><i class="fas fa-file-alt"></i></div>
                        <div class="title">Historia</div>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("AccountEdit", "User")">
                        <div class="icon"><i class="fas fa-cog"></i></div>
                        <div class="title">Ustawienia</div>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <div class="icon"><i class="fa fa-reply"></i></div>
                        <div class="title">Wyloguj</div>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>


    <div class="profile-img">
        <img src="~/AppFiles/Images/avatar.jpg"width="82px" height="90px"/>
    </div>
<div class="account">

    <div class="account-info">
        <div class="profile-head">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true" style="color: #FFB24A !important">About</a>
                </li>
            </ul>
        </div>
    </div>
</div>

<div class="account-gird-container">
    <div class="box a">Imię i nazwisko</div>
    <div class="box b" style="border-right: none;">@Model.FirstName @Model.Surname</div>
    <div class="box d">E-mail</div>
    <div class="box e" style="border-right: none;"> @Model.Email</div>
    <div class="box f">Telefon</div>
    <div class="box f" style="border-right: none;">@Model.PhoneNumber</div>
    <div class="box e">Miato</div>
    <div class="box f" style="border-right: none;">@Model.City</div>
    <div class="box f">Ulica</div>
    <div class="box f" style="border-right: none;"> @Model.Street</div>
    <div class="box f">Numer ulicy</div>
    <div class="box e" style="border-right: none;"> @Model.StreetNumber</div>
    <div class="box f">Kod pocztowy</div>
    <div class="box f" style="border-right: none;"> @Model.Postcode</div>
</div>


