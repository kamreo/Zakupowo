@model IEnumerable<ShopApp.Models.Category>

@using (Html.BeginForm())
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryDescription)
            </th>
            <th>
                <p>
                    Button
                </p>
            </th>
        </tr>


        @for (int i = 0; i < Model.Count(); i++)
        {
            <tr>

                @Html.AntiForgeryToken()

                <td>
                    <div class="form-group">
                        @Html.DisplayFor(modelItem => Model.ElementAt(i).CategoryName)
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        @Html.DisplayFor(modelItem => Model.ElementAt(i).CategoryDescription)
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <input name="CategoryID" type="checkbox" value="@(Model.ElementAt(i).CategoryID)" />
                    </div>
                </td>
            </tr>
        }


    </table>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
}
