@model IEnumerable<ShopApp.Models.Message>

@{
    List<IGrouping<ShopApp.Models.User, ShopApp.Models.Message>> groupUserMessages = (List<IGrouping<ShopApp.Models.User, ShopApp.Models.Message>>)ViewBag.GroupUserMessages;
}

@Styles.Render("~/bundles/UserPanel")
<script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
@Html.Partial("_SideBar")

<div class="container pl-5">

    <div class="row rounded-lg overflow-hidden pl-lg-5 pl-md-4">
        <!-- Users box-->
        <div class="col-5 px-0">
            <div class="bg-white">

                <div class="bg-gray px-4 py-2 bg-light">
                    <p class="h5 mb-0 py-1">Najnowsze</p>
                </div>

                <div class="messages-box">
                    <div class="list-group rounded-0">

                        @{
                            if(Model != null && Model.Count() > 0)
                            {
                                foreach (var msg in Model)
                                {
                                    string shortSentDate = string.Empty;
                                    if (msg.SentTime.CompareTo(DateTime.Now.AddDays(-1)) < 1)
                                    {
                                        shortSentDate = msg.SentTime.ToShortDateString();
                                    }
                                    else
                                    {
                                        shortSentDate = msg.SentTime.ToShortTimeString();
                                    }

                                    <a href="#" class="list-group-item list-group-item-action list-group-item-light rounded-0">
                                        <div class="media">
                                            <img src="@msg.Sender.AvatarImage.PathToFile" alt="user" width="50" class="rounded-circle">
                                            @*<img src="~/Images/user2.jpg" alt="user" width="50" class="rounded-circle">*@
                                            <div class="media-body ml-4">
                                                <div class="d-flex align-items-center justify-content-between mb-1">
                                                    <h6 class="mb-0"> @msg.Sender.Login </h6><small class="small font-weight-bold"> @shortSentDate </small>
                                                </div>
                                                <p class="font-italic text-muted mb-0 text-small">@msg.Content</p>
                                            </div>
                                        </div>
                                    </a>
                                }
                            }
                        }

                    </div>
                </div>
            </div>
        </div>
        <!-- Chat Box-->
        <div class="col-7 px-0">
            <div class="px-4 py-5 chat-box bg-white">
                <!-- Sender Message-->
                <div class="media w-50 mb-3">
                    <img src="~/Images/user.jpg" alt="user" width="50" class="rounded-circle">
                    <div class="media-body ml-3">
                        <div class="bg-light rounded py-2 px-3 mb-2">
                            <p class="text-small mb-0 text-muted">Dzień dobry, chciałbym zapytać o czas wystłki prokduktu.</p>
                        </div>
                        <p class="small text-muted">11:00 PM | Paź 31</p>
                    </div>
                </div>

                <!-- Reciever Message-->
                <div class="media w-50 ml-auto mb-3">
                    <div class="media-body">
                        <div class="bg-primary rounded py-2 px-3 mb-2">
                            <p class="text-small mb-0 text-white">Dzień dobry, wysyłka została już do pana wysłana.Powinna dotrzeć do 2 dni roboczych.</p>
                        </div>
                        <p class="small text-muted">11:05 PM | Paź 31</p>
                    </div>
                </div>

                <!-- Sender Message-->
                <div class="media w-50 mb-3">
                    <img src="~/Images/user.jpg" alt="user" width="50" class="rounded-circle">
                    <div class="media-body ml-3">
                        <div class="bg-light rounded py-2 px-3 mb-2">
                            <p class="text-small mb-0 text-muted">Dziękuje za szybką odpowiedź.</p>
                        </div>
                        <p class="small text-muted">11:07 PM | Paź 31</p>
                    </div>
                </div>

                <!-- Reciever Message-->
                <div class="media w-50 ml-auto mb-3">
                    <div class="media-body">
                        <div class="bg-primary rounded py-2 px-3 mb-2">
                            <p class="text-small mb-0 text-white">Proszę bardzo.</p>
                        </div>
                        <p class="small text-muted">11:10 PM | Paź 31</p>
                    </div>
                </div>

                <!-- Sender Message-->
                <div class="media w-50 mb-3">
                    <img src="~/Images/user.jpg" alt="user" width="50" class="rounded-circle">
                    <div class="media-body ml-3">
                        <div class="bg-light rounded py-2 px-3 mb-2">
                            <p class="text-small mb-0 text-muted">:)</p>
                        </div>
                        <p class="small text-muted">11:11 PM | Paź 31</p>
                    </div>
                </div>

                <!-- Reciever Message-->
                <div class="media w-50 ml-auto mb-3">
                    <div class="media-body">
                        <div class="bg-primary rounded py-2 px-3 mb-2">
                            <p class="text-small mb-0 text-white">:)</p>
                        </div>
                        <p class="small text-muted">11:12 PM | Paź 31</p>
                    </div>
                </div>

            </div>

            <!-- Typing area -->
            <form action="#" class="bg-light">
                <div class="input-group">
                    <input type="text" placeholder="Napisz wiadomość" aria-describedby="button-addon2" class="form-control rounded-0 border-0 py-4 bg-light">
                    <div class="input-group-append">
                        <button id="button-addon2" type="submit" class="btn btn-link"> <i class="fa fa-paper-plane"></i></button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>
