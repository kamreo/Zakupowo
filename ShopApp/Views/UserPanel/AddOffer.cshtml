                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="Name">Nazwa oferty</label>
                                    <div class="col-md-4">
                                        <input maxlength="60" id="product_name" name="Name" placeholder="Offer name" class="form-control input-md" required="" type="text" />
                                        <small id="descriptionCodeHelp" class="form-text text-muted">Maksymalnie 60 znaków</small>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="Description">Opis</label>
                                    <div class="col-md-4">
                                        <textarea maxlength="700" id="product_name_fr" name="Description" placeholder="Description" class="form-control input-md" required=""></textarea>
                                        <small id="descriptionCodeHelp" class="form-text text-muted">Maksymalnie 700 znaków</small>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="Category">Kategoria</label>
                                    <div class="col-md-4">
                                        <select id="product_categorie" name="Category" class="form-control">
                                            <option selected>Wybierz kategorie</option>
                                            @{
                                                for (int i = 0; i < Model.Count(); i++)
                                                {
                                                    <option value="@Model.ElementAt(i).CategoryID">@Model.ElementAt(i).CategoryName</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="Quantity">Ilość produktu</label>
                                    <div class="col-md-4">
                                        <input id="available_quantity" name="Quantity" placeholder="Product quantity" class="form-control input-md" required="" type="number">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="Price">Cena</label>
                                    <div class="col-md-4">
                                        <input id="product_weight" name="Price" placeholder="Price" class="form-control input-md" required="" type="text">
                                    </div>
                                </div>

                                <div id="images-container">
                                    <div class="form-group">
                                        <i class="fa fa-times del " style="display: none"></i>
                                        <div class="col-sm-4 imgUp mt-4">
                                            <div class="imagePreview">Zdjęcia</div>
                                            <label class="btn btn-outline-warning btn-lg btn-block btn-circle">
                                                <i class="fa fa-plus imgAdd"></i>
