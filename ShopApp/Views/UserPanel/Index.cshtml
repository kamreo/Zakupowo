
@model ShopApp.Models.User
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>USER PANEL</title>
</head>
<body>
    <h1>Panel użytkownika</h1>
    <div>
        @{
            var data = ViewBag.Message;
        }
        @foreach (var user in data)
        {
            <h3>@user.FirstName</h3>
        }
        <table class="table">
            <thead>
                <tr>
                  
                    <th scope="col">Imię</th>
                    <th scope="col">Nazwisko</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>Mark</td>
                    <td>Otto</td>
                    <td>@mdo</td>
                </tr>
                <tr>
                    <th scope="row">2</th>
                    <td>Jacob</td>
                    <td>Thornton</td>
                    <td>@fat</td>
                </tr>
                <tr>
                    <th scope="row">3</th>
                    <td>Larry</td>
                    <td>the Bird</td>
                    <td>@twitter</td>
                </tr>
            </tbody>
        </table>
        <h2>Dodaj nowego użytkownika</h2>
        <form class="form-user-edit-info">
            <fieldset>

                <div class="form-group">
                    <label for="exampleInputEmail1">Adres email</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Podaj adres email">
                    <small id="emailHelp" class="form-text text-muted"></small>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Hasło</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Hasło">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Powtórz hasło</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Powtórz hasło">
                </div>


                <div class="form-group">
                    <label for="exampleInputFile">Zmień avatar</label>
                    <input type="file" class="form-control-file" id="exampleInputFile" aria-describedby="fileHelp">

                </div>
                <button type="submit" class="btn btn-primary">Zatwierdź</button>
            </fieldset>
        </form>
    </div>
</body>
</html>
