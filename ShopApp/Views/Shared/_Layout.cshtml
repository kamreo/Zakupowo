<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Shop site.</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary navbar-fixed-top" style="top:0;width:100%;position:absolute;">
        <div class="collapse navbar-collapse" id="navbarColor01">
            @Html.ActionLink("Zakupowo.pl", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <ul class="navbar-nav mr-auto">
                <li class="px-2 ">@Html.ActionLink("Strona główna", "Index", "Home")</li>
                <li class="px-2 ">@Html.ActionLink("Kontakt", "Contact", "Home")</li>
                <li class="px-2 ">@Html.ActionLink("Rejestracja", "Create", "Register")</li>
                <li class="px-2 ">@Html.ActionLink("Panel użytkownika", "Index", "UserPanel")</li>
            </ul>
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="text" placeholder="...">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Szukaj</button>
            </form>
        </div>
    </nav>


    <div class="container body-content" style="padding-top:30px">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
